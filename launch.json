{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Open HTML in Chromium",
            "type": "chrome",
            "request": "launch",
            "url": "chromium-browser",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/chromium-browser",  
            "runtimeArgs": [
                "--no-sandbox"  
            ]
        }
    ]
}
